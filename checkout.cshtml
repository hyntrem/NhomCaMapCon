@page
@model SellKoiWeb.Pages.CheckoutModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thanh toán Cá Koi</title>
    <!-- Thêm Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .koi-details img {
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .koi-details h3 {
            font-size: 1.5rem;
            margin-top: 15px;
        }

        .btn-submit {
            margin-top: 15px;
            background-color: #28a745;
            color: white;
        }

        .btn-submit:hover {
            background-color: #218838;
        }

        .form-control {
            margin-bottom: 10px;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container my-5">
        <h2 class="text-center text-primary">Thanh toán Cá Koi</h2>

        <!-- Hiện thông báo thành công -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["SuccessMessage"]
            </div>
        }

        <!-- Hiện lỗi -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center">
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- Thông tin cá Koi -->
        <div class="koi-details text-center my-4">
            <img src="@Model.SelectedFish?.Image" alt="@Model.SelectedFish?.Name" width="200" />
            <h3 class="text-success">@Model.SelectedFish?.Name</h3>
            <p class="price text-muted">Giá: @Model.SelectedFish?.Price</p>
            <p class="rating">Đánh giá: <span class="badge bg-warning text-dark">@Model.SelectedFish?.Rating</span></p>
        </div>

        <!-- Form nhập thông tin người mua -->
        <form method="post" class="p-4 bg-white rounded shadow-sm">
            <input type="hidden" name="FishId" value="@Model.SelectedFish?.Id" />
            <div class="mb-3">
                <label for="buyerName" class="form-label">Tên người mua:</label>
                <input type="text" id="buyerName" name="BuyerName" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="buyerEmail" class="form-label">Email:</label>
                <input type="email" id="buyerEmail" name="BuyerEmail" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Địa chỉ giao hàng:</label>
                <textarea id="address" name="Address" class="form-control" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-success w-100 btn-submit">Xác nhận thanh toán</button>
        </form>
    </div>

    <!-- Thêm Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
